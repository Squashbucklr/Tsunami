<html>
	<head>
		<style type="text/css">
			a{
				text-decoration: none;
				text-decoration: underline;
				color: #DDDDDD;
				font-family: sans-serif;
				font-size: 20;
			}
			body {
     			background-color: #444444;
 			}
 			p{
 				color: #DDDDDD;
 			}
 			.boot{
 				border: none;
                border-radius: 5px;
                padding: 9px;
                background-color: #379F54;
                color: white;
                font-size: 17;
 			}
 			.color{
 				color:white;
 				font-family: sans-serif;
 			}
 			.rect-outer {
                width: 300px;
                height: auto;
                border: 3px solid #379F54;
                padding: 30px;
                color: white;
                background-color: #444444;
                
            }
            .imglink{
                display: block;
                padding-right: 20px;
                margin-right: 20px;
            }
		</style>
    </head>
	<body>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script>
		function poost(name){
			$.post("/delete/" + name,
			    function(data,status){
			        if(data != "ERRNODEL"){
			        	document.getElementById("DIVID-" + name).remove();
				    }
			    }
			);
		}
	</script>
	<a href = "/about" display="block" style="float: right">About <img style="float: right" src="/img/logo.png" width="100px" height="120px" /></a>
		<h1 class="color">UniMedia</h1>
		<br/>
		<form method='post' enctype='multipart/form-data'>
    		<input type='file' name='uploaded_file'>
    		<button class="boot">Upload File</button>
    		<input class="boot" type="button" value="Refresh" onClick="window.location.reload()">
		</form>
		<br/>
		<br/>
		{% for name in files %}
		<div style="display: block" id="DIVID-{{ name }}" class="rect-outer">{{ name }} <a class="imglnk" href="#" style="float: right" onclick="poost('{{ name }}')"><img src="/img/dl.png" /></a><a class="imglnk" style="float: right" href="/downloads/{{ name }}" download><img src="/img/dn.png" /></a></div>
		{% endfor %}
	</body>
</html>